{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // serilog
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      //{
      //  "Name": "Console"
      //},
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day"
        }
      }

    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "ESAP.CRM.API"
    }
  },
  //connection string
  "ConnectionStrings": {
    "TaskManagementDb": "Server=(localdb)\\MSSQLLocalDB;Database=TaskManagementSystemDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "Key": "Selice-Task-N-Team-Management-System",
    "Issuer": "TaskManagementSystem",
    "Audience": "TaskManagementSystemClient",
    "ExpiryInMinutes": 60
  }


}
